{
  "manifest_version": 3,
  "name": "Translation to Darija",
  "version": "1.0",
  "description": "Translate selected text to Moroccan Darija",

  "permissions": ["activeTab"],

  "host_permissions": [
    "http://localhost:8080/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["sidebar.css"]
    }
  ],

  "action": {
    "default_title": "Translation to Darija"
  }
}
